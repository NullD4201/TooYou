datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

// User 테이블 생성 (create table user;)
model User {
    // @id = TABLE의 키값 @unique 유니크한 값(중복X) @default(uuid()) = uuid형식 자동생성
    // String 형식 = VARCHAR
    uuid      String @id @unique @default(uuid())
    loginId   String
    password  String
    pwsalt    String
    name      String
    email     String
}
